{% extends 'backoffice/form_to_handle_item.base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/select2/select2.min.css') }}">
{% endblock %}
{% block form_body %}

    {{ include('backoffice/travel/_form.html.twig') }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/plugin/select2/select2.full.min.js') }}"></script>
    <script src="{{ asset("assets/js/blog/travel/form/calculate.travel.expenses.js") }}"></script>
    <script src="{{ asset("assets/js/blog/travel/form/add.another.employee.js") }}"></script>
    <script src="{{ asset("assets/js/blog/travel/form/add.another.resolution.file.js") }}"></script>
    <script>
        $(document).ready(function () {

            $('select[name*="employee"]').select2({ placeholder: '- ' + Translator.trans('Required') + ' -'});
            $('#travel_tripDestinations').select2({ placeholder: '- ' + Translator.trans('Required') + ' -'});
            $('select[name*="replacement"]').select2({placeholder: '- ' + Translator.trans('Optional') + ' -'});
            $('.add-another-collection-widget').click();

            // set departureDate value in arrivalDate
            $('[name="travel[departureDate]"]').on('focusout',function () {
                $('[name="travel[arrivalDate]"]').val($('[name="travel[departureDate]"]').val());
            })
        });
    </script>
{% endblock  %}