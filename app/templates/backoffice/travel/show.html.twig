{% extends 'base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}
    <h1>Travel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>DepartureDate</th>
                <td>{{ travel.departureDate ? travel.departureDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ArrivalDate</th>
                <td>{{ travel.arrivalDate ? travel.arrivalDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TravelExpenses</th>
                <td>{{ travel.expenses }}</td>
            </tr>
            <tr>
                <th>Resolution</th>
                <td>{{ travel.resolution }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('travel_index') }}">back to list</a>

    <a href="{{ path('travel_edit', {'id': travel.id}) }}">edit</a>

    {{ include('travel/_delete_form.html.twig') }}
{% endblock %}
